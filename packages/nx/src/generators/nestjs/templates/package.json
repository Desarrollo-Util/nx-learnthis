{
	"name": "crm-backend",
	"version": "0.0.1",
	"description": "crm",
	"author": "Agencia MPD",
	"private": true,
	"scripts": {
		"prebuild": "rimraf dist && npm run copy:utils",
		"build": "nest build",
		"copy:utils": "cpx \"../utils/**/*\" \"./src/utils\"",
		"doc": "npx @compodoc/compodoc -p tsconfig.json --theme material",
		"doc:dev": "npx @compodoc/compodoc -p tsconfig.json -s -o --theme material -w",
		"docker:dev:up": "docker-compose -p crm-dev up -d",
		"docker:dev:down": "docker-compose -p crm-dev down",
		"docker:dev:down:volumes": "docker-compose -p crm-dev down -v",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"start": "nest start",
		"prestart:dev": "rimraf dist && npm run docker:dev:up && npm run copy:utils",
		"start:dev": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/main",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json"
	},
	"dependencies": {},
	"devDependencies": {},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	}
}
